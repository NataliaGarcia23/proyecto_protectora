                                <Button.BorderBrush>
                                    <SolidColorBrush Color="White" Opacity="0"/>
                                </Button.BorderBrush>
                                <Button.Background>
                                    <SolidColorBrush Color="White" Opacity="0"/>
                                </Button.Background>
                                <Image Source="Imagenes/salir_c.png"/>
